{
    "tasks": [
        { // Create package without namespace
            "label": "SFDX package: Create Package w/o namespace",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:create",
                "--name",
                "${input:packageName}",
                "--description",
                "${input:packageDescription}",
                "--packagetype",
                "${input:packageType}",
                "--nonamespace",
                "--path",
                "${input:path}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Create package with namespace
            "label": "SFDX package: Create Package with namespace",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:create",
                "--name",
                "${input:packageName}",
                "--description",
                "${input:packageDescription}",
                "--packagetype",
                "${input:packageType}",
                "--path",
                "${input:path}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Create Package version
            "label": "SFDX Package: Create Package version",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:version:create",
                "--package",
                "${input:packageId}",
                "--wait",
                "20",
                "--installationkeybypass",
                "--codecoverage"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Release package version via Id
            "label": "SFDX Package: Release Package version",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:version:promote",
                "--package",
                "${input:packageVersionId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Delete package version
            "label": "SFDX Package: Delete Package Version",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:version:delete",
                "--package",
                "${input:packageId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // Delete package
            "label": "SFDX Package: Delete Package",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:delete",
                "--package",
                "${input:packageId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // List all packages
            "label": "SFDX Package: Get all packages",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:list"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        { // List all package versions
            "label": "SFDX Package: Get All Package Versions",
            "type": "shell",
            "command": "sfdx",
            "args": [
                "force:package:version:list",
                "--packages",
                "${input:packageId}"
            ],
            "group": "build",
            "problemMatcher" : [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id" : "packageName",
            "description": "Enter package name(MUST be enclosed in DOUBLE QUOTES)",
            "type": "promptString",
        },
        {
            "id" : "path",
            "description": "Enter folder path",
            "type": "promptString",
            "default": "force-app"
        },
        {
            "id": "packageDescription",
            "description": "Enter description(MUST be enclosed in DOUBLE QUOTES)",
            "type": "promptString"
        },
        {
            "id": "packageNameSpace",
            "description": "Package Namespace",
            "type": "promptString"
        },
        {
            "id" : "packageId",
            "description": "Enter Package Id",
            "type": "promptString",
            //"default": "${selectedText}"
        },
        {
            "id": "packageType",
            "description": "Select Package Type",
            "type" :"pickString",
            "options": [
                "Managed","Unlocked"
            ],
            "default": "Unlocked"
        },
        {
            "id": "packageVersionId",
            "description": "Enter package version ID",
            "type": "promptString"
        }
    ]
}